{
	"compilerOptions": {
		"target": "ES2018",
		"lib": ["es5", "es6", "ES2018"],
		"module": "commonjs",
		"moduleResolution": "node",
		"typeRoots": ["./src/@types"],
		"resolveJsonModule": true,
		"allowJs": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"strictPropertyInitialization": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
